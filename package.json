{
  "name": "markwell",
  "version": "0.1.0",
  "description": "Convert documents to and from Markdown. The source from which polished documents flow.",
  "type": "module",
  "main": "./dist/cli/index.js",
  "bin": {
    "markwell": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsdown && cp -r src/themes dist/themes && cp -r src/skills dist/skills",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "converter",
    "docx",
    "xlsx",
    "pptx",
    "cli"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.2.2",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsdown": "^0.12.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.0"
  },
  "dependencies": {
    "@iarna/rtf-to-html": "^1.1.0",
    "@marp-team/marp-core": "^4.2.0",
    "commander": "^13.0.0",
    "docx": "^9.5.1",
    "exceljs": "^4.4.0",
    "fast-glob": "^3.3.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "turndown": "^7.2.2",
    "unified": "^11.0.5",
    "yaml": "^2.6.0"
  }
}
